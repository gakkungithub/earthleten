// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// データベースはsqliteを使う
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// データベース表の形状の定義
// idは数値ではなく文字列の方がいい(数値だと桁数が限られてしまううえに、数値はフォーマットが沢山あるから)
model Thread {
  id        String    @id
  user      User      @relation(fields: [uid], references: [id])
  uid       String
  title     String
  sports     String
  bdate     DateTime  @default(now())
  comments  Comment[]
}

model Comment {
  id        String    @id
  thread    Thread    @relation(fields: [tid], references: [id])
  tid       String
  user      User      @relation(fields: [uid], references: [id])
  uid       String
  talk      String  
  cdate     DateTime  @default(now())
}

model User {
  id        String    @id
  threads   Threads[]
  comments  Comment[]
  name      String    @unique
  gender    String
  bdate     DateTime
  height    Float
  weight    Float
  image     String
}
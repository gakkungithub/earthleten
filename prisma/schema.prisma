// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// データベースはsqliteを使う
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// データベース表の形状の定義
// idは数値ではなく文字列の方がいい(数値だと桁数が限られてしまううえに、数値はフォーマットが沢山あるから)
model Bulletin {
  id        String    @id
  comments  Comment[]
  title     String
  genre     String
  user      User      @relation(fields: [uid], references: [id])
  uid       String
  bdate     DateTime  @default(now())
}

model Comment {
  id        String    @id
  bulletin  Bulletin  @relation(fields: [bid], references: [id])
  bid       String
  user      User      @relation(fields: [uid], references: [id])
  uid       String
  talk      String  
  bdate     DateTime  @default(now())
}

model User {
  id        String    @id
  name      String    @unique
  gender    String
  bdate     DateTime
  height    Float
  weight    Float
  image     String
  bulletins Bulletin[]
  comments  Comment[]
}